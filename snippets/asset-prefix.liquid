{%- comment -%}
  Serves development assets when `snippets/dev.liquid` is present.

  Usage:
    {%- capture prefix -%}{%- render 'asset-prefix' -%}{%- endcapture -%}
    <script src="{{ 'main.js' | prepend: prefix | asset_url }}" type="module" defer="defer"></script>
    {{ 'main.css' | prepend: prefix | asset_url | stylesheet_tag: preload: true }}
{%- endcomment -%}

{%- liquid
  capture development
    # theme-check-disable
    render 'dev'
    # theme-check-enable
  endcapture

  if development == 'development'
    echo 'ap-dev.'
  else
    echo 'ap.'
  endif
-%}
